<article class="post">
  <div class="post-title">
    <h2 class="title">
      <%= page.title %>
    </h2>
  </div>

  <div class="post-meta">
    <span class="post-date">
      Publish on <%- date(page.data, "YYYY-MM-DD") %>
    </span>
  </div>

  <div class="post-content">
    <%- page.content %>
  </div>

</article>

